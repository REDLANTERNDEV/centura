# ============================================
# Docker Environment Configuration
# Copy this file to .env for Docker deployments
# ============================================

# ============================================
# Environment
# ============================================
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
DB_NAME=mini_saas_erp
DB_USER=postgres
DB_PASSWORD=your-super-secure-database-password-here
DB_PORT=5432

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8765

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-at-least-256-bits-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-different-from-jwt-also-256-bits

# ============================================
# Frontend Configuration
# ============================================
FRONTEND_PORT=4321
FRONTEND_URL=http://localhost:4321

# API URL (as seen from browser)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8765/api/v1

# ============================================
# Cookie Configuration
# ============================================
# For production with custom domain, uncomment and set:
# COOKIE_DOMAIN=yourdomain.com

# ============================================
# Docker Configuration
# ============================================
COMPOSE_PROJECT_NAME=mini-saas-erp
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
